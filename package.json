{
  "name": "textbox",
  "widgetName": "TextBox",
  "version": "1.0.0",
  "description": "Edit text input",
  "copyright": "Mendix 2018",
  "author": "Andries Smit",
  "config": {
    "widgetPath": "./dist/MxTestProject/widgets",
    "projectPath": "./dist/MxTestProject/",
    "mendixHost": "http://localhost:8080",
    "developmentPort": "3000"
  },
  "packagePath": "mendix",
  "scripts": {
    "start": "webpack-dev-server --hot --open",
    "emit": "tsc",
    "dev": "gulp --gulpfile Gulpfile.js",
    "build": "gulp build",
    "lint": "tslint -c tslint.json '**/*.ts' '**/*.tsx' --exclude '**/node_modules/**'",
    "lint:fix": "npm run lint -- --fix",
    "deploy": " npm run updateProject && npm run deployApp",
    "updateProject": "node ./node_modules/mendix-widget-build-script/dist/UpdateMxProject.js",
    "deployApp": "node ./node_modules/mendix-widget-build-script/dist/DeployMxApp.js",
    "prerelease": "npm run lint",
    "release": "gulp release --gulpfile Gulpfile.js"
  },
  "pre-commit": [
    "emit",
    "lint"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Andries Smit/textbox"
  },
  "license": "Apache 2",
  "devDependencies": {
    "@types/big.js": "^4.0.5",
    "@types/classnames": "^2.2.4",
    "@types/core-js": "^2.5.0",
    "@types/globalize": "0.0.34",
    "@types/react": "^16.7.6",
    "@types/react-dom": "^16.0.9",
    "babel-core": "^6.26.0",
    "babel-loader": "^8.0.5",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "check-dependencies": "^1.1.0",
    "copy-webpack-plugin": "^4.5.3",
    "core-js": "^2.5.7",
    "css-loader": "^2.1.0",
    "file-loader": "^3.0.1",
    "fork-ts-checker-webpack-plugin": "^0.5.2",
    "gulp": "^4.0.0",
    "gulp-change": "^1.0.2",
    "gulp-rename": "^1.4.0",
    "gulp-slash": "^1.1.3",
    "gulp-xml2js": "^0.1.1",
    "gulp-zip": "^4.2.0",
    "json-loader": "^0.5.4",
    "json-source-map": "^0.4.0",
